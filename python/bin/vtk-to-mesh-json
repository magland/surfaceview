#!/usr/bin/env python3

import click
import surfaceview

@click.command('vtk-to-mesh-json')
@click.argument('vtk_path')
@click.argument('json_path')
@click.option('--format', help='One of: UnstructuredGrid, XMLPolyData', required=True)
def cli(vtk_path: str, json_path: str, format: str):
    surfaceview.vtk_to_mesh_json(vtk_path, json_path, format)

if __name__ == '__main__':
    cli()